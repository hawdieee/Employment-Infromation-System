@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0"  Style="height:100px; width: 100%;  background: rgb(255,255,255); box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;" Class=" pt-5" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Dark" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <div style="margin-left: 15rem">
             <MudImage Src="Images/Logo.png"/>
        </div>
       
        <div class="head d-flex gap-8 pl-15" style="margin-left: 5rem;" >
                <MudButton Class="mud-info "  Style="@($"color:{Colors.Shades.White}")">
                    <MudText Typo="Typo.h6" Style="padding: 1px 12px">Home</MudText>
                </MudButton>
                <MudButton Style="@($"color:{Colors.Shades.Black}")">
                    <MudText Typo="Typo.h6" Style="padding: 1px 12px">My Account</MudText>
                </MudButton>
                 <MudButton Style="@($"color:{Colors.Shades.Black}")">
                    <MudText Typo="Typo.h6" Style="padding: 1px 12px">Employer/Post Job</MudText>
                </MudButton>
        </div>
        <MudSpacer />
         <div style="margin-right: 15rem">
            <MudIconButton Icon="@Icons.Material.Filled.Message"  Style="@($"color:{Colors.Green.Default}")" Link="https://mudblazor.com/" Target="_blank" />
            <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Info" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />
            <MudButton Style="@($"color:{Colors.Shades.Black}")">
                <MudText Typo ="Typo.h6"> Logout</MudText>
            </MudButton>
        </div>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MyApplication</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}